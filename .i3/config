# Set modifier key to Windows-key
set $mod Mod4

# Set keyboard layout and trackpoint configuration
exec setxkbmap dk
exec /home/nicolai/Scripts/trackpoint.sh

# Brightness
exec /usr/bin/xbacklight -set 50%
bindsym XF86MonBrightnessUp exec /usr/bin/xbacklight -inc 10%
bindsym XF86MonBrightnessDown exec /usr/bin/xbacklight -dec 10%

# Screen lock
bindsym $mod+l exec cinnamon-screensaver-command -l #xscreensaver-command --lock

# Run startup applications 
exec setxkbmap dk
#exec --no-startup-id xfce4-notifyd
#exec --no-startup-id xfce4-volumed
exec --no-startup-id compton -b -f --backend glx --vsync opengl-swc --glx-no-stencil --paint-on-overlay --config ~/.config/compton.conf
exec --no-startup-id dropbox
exec --no-startup-id /usr/libexec/cinnamon-settings-daemon
exec --no-startup-id nitrogen --restore
#exec --no-startup-id xfce4-power-manager
bindsym XF86AudioLowerVolume exec amixer -q set Master 10%- unmute && killall -USR1 i3blocks
bindsym XF86AudioMute exec amixer -q set Master toggle
bindsym XF86AudioRaiseVolume exec amixer -q set Master 10%+ unmute && killall -USR1 i3blocks

# Application shortcuts
bindsym $mod+w exec firefox
bindsym $mod+f exec thunar
bindsym $mod+m exec thunderbird

# Window arguments
for_window [class="Nitrogen"] floating enable
for_window [class="ARandR"] floating enable
for_window [class="lxappearance"] floating enable
for_window [title="xfce4-volumed"] floating enable
for_window [title="xfce4-notifyd"] floating enable
for_window [title="Steam*"] floating enable
for_window [title="Synergy"] floating enable
